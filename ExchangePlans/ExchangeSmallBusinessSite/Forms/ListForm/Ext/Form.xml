				<QueryText>SELECT
	ExchangePlanExchangeSmallBusinessSite.Ref,
	ExchangePlanExchangeSmallBusinessSite.DataVersion,
	ExchangePlanExchangeSmallBusinessSite.DeletionMark,
	ExchangePlanExchangeSmallBusinessSite.Code,
	ExchangePlanExchangeSmallBusinessSite.Description,
	ExchangePlanExchangeSmallBusinessSite.SentNo,
	ExchangePlanExchangeSmallBusinessSite.ReceivedNo,
	ExchangePlanExchangeSmallBusinessSite.PerformFullExportingCompulsorily,
	ExchangePlanExchangeSmallBusinessSite.Comment,
	ExchangePlanExchangeSmallBusinessSite.ProductsExchange,
	ExchangePlanExchangeSmallBusinessSite.OrdersExchange,
	ExchangePlanExchangeSmallBusinessSite.ExportToSite,
	ExchangePlanExchangeSmallBusinessSite.ExportDirectory,
	ExchangePlanExchangeSmallBusinessSite.SiteAddress,
	ExchangePlanExchangeSmallBusinessSite.UserName,
	ExchangePlanExchangeSmallBusinessSite.Password,
	ExchangePlanExchangeSmallBusinessSite.UseScheduledJobs,
	ExchangePlanExchangeSmallBusinessSite.ScheduledJobID,
	ExchangePlanExchangeSmallBusinessSite.CounterpartiesIdentificationMethod,
	ExchangePlanExchangeSmallBusinessSite.GroupForNewCounterparties,
	ExchangePlanExchangeSmallBusinessSite.GroupForNewProductsAndServices,
	ExchangePlanExchangeSmallBusinessSite.ExportPictures,
	ExchangePlanExchangeSmallBusinessSite.SavedDirectoriesTable,
	ExchangePlanExchangeSmallBusinessSite.ImportFile,
	ExchangePlanExchangeSmallBusinessSite.OrdersStatesCorrespondence.(
		Ref,
		LineNumber,
		OrderStatusOnSite,
		CustomerOrderStatus
	),
	ExportStatus.EndDate AS ExportDate,
	CASE
		WHEN ExportStatus.ExchangeProcessResult IS NULL 
				OR ExportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.Completed)
			THEN 0
		WHEN ExportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.Warning_ExchangeMessageHasBeenPreviouslyReceived)
			THEN 2
		WHEN ExportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.CompletedWithWarnings)
			THEN 2
		ELSE 1
	END AS ExportResult,
	ImportStatus.EndDate AS ImportDate,
	CASE
		WHEN ImportStatus.ExchangeProcessResult IS NULL 
				OR ImportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.Completed)
			THEN 0
		WHEN ImportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.Warning_ExchangeMessageHasBeenPreviouslyReceived)
			THEN 2
		WHEN ImportStatus.ExchangeProcessResult = VALUE(Enum.ExchangeExecutionResult.CompletedWithWarnings)
			THEN 2
		ELSE 1
	END AS ImportResult,
	SuccessfulImports.EndDate AS SuccessfulImportDate,
	SuccessfulDumps.EndDate AS SuccessfulExportDate
	FROM
	ExchangePlan.ExchangeSmallBusinessSite AS ExchangePlanExchangeSmallBusinessSite
		LEFT JOIN InformationRegister.DataExchangeStatus AS ExportStatus
		ON ExchangePlanExchangeSmallBusinessSite.Ref = ExportStatus.InfobaseNode
			AND (ExportStatus.ActionOnExchange = VALUE(Enum.ActionsAtExchange.DataExport))
		LEFT JOIN InformationRegister.DataExchangeStatus AS ImportStatus
		ON ExchangePlanExchangeSmallBusinessSite.Ref = ImportStatus.InfobaseNode
			AND (ImportStatus.ActionOnExchange = VALUE(Enum.ActionsAtExchange.DataImport))
		LEFT JOIN InformationRegister.SuccessfulDataExchangeStatus AS SuccessfulImports
		ON ExchangePlanExchangeSmallBusinessSite.Ref = SuccessfulImports.InfobaseNode
			AND (SuccessfulImports.ActionOnExchange = VALUE(Enum.ActionsAtExchange.DataImport))
		LEFT JOIN InformationRegister.SuccessfulDataExchangeStatus AS SuccessfulDumps
		ON ExchangePlanExchangeSmallBusinessSite.Ref = SuccessfulDumps.InfobaseNode
			AND (SuccessfulDumps.ActionOnExchange = VALUE(Enum.ActionsAtExchange.DataExport))
	WHERE
		ExchangePlanExchangeSmallBusinessSite.Ref &lt;&gt; &amp;ThisNode</QueryText>
