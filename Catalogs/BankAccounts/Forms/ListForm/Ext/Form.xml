			</UseAlways>
			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>true</DynamicDataRead>
				<QueryText>SELECT
	CatalogBankAccount.Ref,
	CatalogBankAccount.DeletionMark,
	CatalogBankAccount.Owner,
	CatalogBankAccount.Code,
	CatalogBankAccount.Description,
	CatalogBankAccount.CashCurrency,
	CatalogBankAccount.AccountNo,
	CatalogBankAccount.Bank,
	CatalogBankAccount.AccountsBank,
	CatalogBankAccount.GLAccount,
	CatalogBankAccount.AccountType,
	CatalogBankAccount.CorrespondentText,
	CatalogBankAccount.DestinationText,
	CatalogBankAccount.MonthOutputOption,
	CatalogBankAccount.AmountWithoutCents,
	CatalogBankAccount.PermissionNumberAndDate,
	CatalogBankAccount.OpeningDate,
	CatalogBankAccount.ClosingDate,
	CatalogBankAccount.KPPIndicationVersion,
	CatalogBankAccount.Predefined,
	CatalogBankAccount.PredefinedDataName,
	EDUsageAgreements.AgreementStatus AS AgreementOnDirectExchange

FROM
	Catalog.BankAccounts AS CatalogBankAccount
		LEFT JOIN Catalog.EDUsageAgreements AS EDUsageAgreements
		ON CatalogBankAccount.Bank = EDUsageAgreements.Counterparty
			AND CatalogBankAccount.Owner = EDUsageAgreements.Company</QueryText>
				<MainTable>Catalog.BankAccounts</MainTable>
