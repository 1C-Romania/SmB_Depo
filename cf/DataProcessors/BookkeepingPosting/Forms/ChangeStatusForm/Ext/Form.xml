<?xml version="1.0" encoding="UTF-8"?>
<Form xmlns="http://v8.1c.ru/8.3/xcf/logform" xmlns:app="http://v8.1c.ru/8.2/managed-application/core" xmlns:cfg="http://v8.1c.ru/8.1/data/enterprise/current-config" xmlns:dcscor="http://v8.1c.ru/8.1/data-composition-system/core" xmlns:dcsset="http://v8.1c.ru/8.1/data-composition-system/settings" xmlns:ent="http://v8.1c.ru/8.1/data/enterprise" xmlns:lf="http://v8.1c.ru/8.2/managed-application/logform" xmlns:style="http://v8.1c.ru/8.1/data/ui/style" xmlns:sys="http://v8.1c.ru/8.1/data/ui/fonts/system" xmlns:v8="http://v8.1c.ru/8.1/data/core" xmlns:v8ui="http://v8.1c.ru/8.1/data/ui" xmlns:web="http://v8.1c.ru/8.1/data/ui/colors/web" xmlns:win="http://v8.1c.ru/8.1/data/ui/colors/windows" xmlns:xr="http://v8.1c.ru/8.3/xcf/readable" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4">
	<CommandBarLocation>Bottom</CommandBarLocation>
	<VerticalScroll>useIfNecessary</VerticalScroll>
	<AutoCommandBar name="FormCommandBar" id="-1">
		<HorizontalAlign>Right</HorizontalAlign>
		<ChildItems>
			<Button name="FormApplySettings" id="8">
				<Type>CommandBarButton</Type>
				<CommandName>Form.Command.ApplySettings</CommandName>
				<ExtendedTooltip name="FormApplySettingsExtendedTooltip" id="9"/>
			</Button>
			<Button name="FormClose" id="7">
				<Type>CommandBarButton</Type>
				<Representation>PictureAndText</Representation>
				<CommandName>Form.StandardCommand.Close</CommandName>
				<ExtendedTooltip name="FormCloseExtendedTooltip" id="10"/>
			</Button>
		</ChildItems>
	</AutoCommandBar>
	<Events>
		<Event name="OnOpen">OnOpen</Event>
		<Event name="OnCreateAtServer">OnCreateAtServer</Event>
	</Events>
	<ChildItems>
		<LabelDecoration name="Decoration" id="1">
			<Width>35</Width>
			<Height>3</Height>
			<TextColor>style:InformationTextColor</TextColor>
			<Title formatted="false">
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Status will be changed for selected document(s). Change status on "Shouldn't post" is possible only for documents that don't have bookkeeping operation.</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>pl</v8:lang>
					<v8:content>Status zostanie zmieniony dla wybranego dokumentu(ów). Zmiana statusu na "Nie księguje się" możliwa jest tylko dla dokumentów, które nie posiadają dowodu księgowego.</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>Будет изменен статус у выбранных документов. Изменение статуса на "Не проводится" возможно только для документов без бухгалтерских операций.</v8:content>
				</v8:item>
			</Title>
			<ContextMenu name="DecorationContextMenu" id="2"/>
			<ExtendedTooltip name="DecorationExtendedTooltip" id="11"/>
		</LabelDecoration>
		<RadioButtonField name="DocumentStatus" id="3">
			<DataPath>DocumentStatus</DataPath>
			<RadioButtonType>Auto</RadioButtonType>
			<ColumnsCount>1</ColumnsCount>
			<ChoiceList>
				<xr:Item>
					<xr:Presentation/>
					<xr:CheckState>0</xr:CheckState>
					<xr:Value xsi:type="FormChoiceListDesTimeValue">
						<Presentation>
							<v8:item>
								<v8:lang>en</v8:lang>
								<v8:content>Not posted (to post)</v8:content>
							</v8:item>
							<v8:item>
								<v8:lang>pl</v8:lang>
								<v8:content>Nie zaksięgowane (do zaksięgowania)</v8:content>
							</v8:item>
							<v8:item>
								<v8:lang>ru</v8:lang>
								<v8:content>Непроведенные (к проведению)</v8:content>
							</v8:item>
						</Presentation>
						<Value xsi:type="xr:DesignTimeRef">Enum.DocumentBookkeepingStatus.EnumValue.NotBookkeepingPosted</Value>
					</xr:Value>
				</xr:Item>
				<xr:Item>
					<xr:Presentation/>
					<xr:CheckState>0</xr:CheckState>
					<xr:Value xsi:type="FormChoiceListDesTimeValue">
						<Presentation>
							<v8:item>
								<v8:lang>en</v8:lang>
								<v8:content>Shouldn't post</v8:content>
							</v8:item>
							<v8:item>
								<v8:lang>pl</v8:lang>
								<v8:content>Nie księgują się</v8:content>
							</v8:item>
							<v8:item>
								<v8:lang>ru</v8:lang>
								<v8:content>Не проводятся</v8:content>
							</v8:item>
						</Presentation>
						<Value xsi:type="xr:DesignTimeRef">Enum.DocumentBookkeepingStatus.EnumValue.BookkeepingPostingIsNotAllowed</Value>
					</xr:Value>
				</xr:Item>
			</ChoiceList>
			<ContextMenu name="DocumentStatusContextMenu" id="4"/>
			<ExtendedTooltip name="DocumentStatusExtendedTooltip" id="12"/>
			<Events>
				<Event name="OnChange">DocumentStatusOnChange</Event>
			</Events>
		</RadioButtonField>
		<InputField name="Comment" id="5">
			<DataPath>Comment</DataPath>
			<ContextMenu name="CommentContextMenu" id="6"/>
			<ExtendedTooltip name="CommentExtendedTooltip" id="13"/>
		</InputField>
	</ChildItems>
	<Attributes>
		<Attribute name="DocumentStatus" id="1">
			<Title>
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Change status</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>pl</v8:lang>
					<v8:content>Zmień status na</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>Изменить статус на</v8:content>
				</v8:item>
			</Title>
			<Type>
				<v8:Type>cfg:EnumRef.DocumentBookkeepingStatus</v8:Type>
			</Type>
			<SavedData>true</SavedData>
			<FillCheck>ShowError</FillCheck>
		</Attribute>
		<Attribute name="Comment" id="2">
			<Title>
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Comment</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>pl</v8:lang>
					<v8:content>Komentarz</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>Комментарий</v8:content>
				</v8:item>
			</Title>
			<Type>
				<v8:Type>xs:string</v8:Type>
				<v8:StringQualifiers>
					<v8:Length>0</v8:Length>
					<v8:AllowedLength>Variable</v8:AllowedLength>
				</v8:StringQualifiers>
			</Type>
			<SavedData>true</SavedData>
		</Attribute>
	</Attributes>
	<Commands>
		<Command name="ApplySettings" id="1">
			<Title>
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>OK</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>pl</v8:lang>
					<v8:content>OK</v8:content>
				</v8:item>
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>ОК</v8:content>
				</v8:item>
			</Title>
			<Picture>
				<xr:Ref>StdPicture.WriteAndClose</xr:Ref>
				<xr:LoadTransparent>true</xr:LoadTransparent>
			</Picture>
			<Action>ApplySettings</Action>
			<Representation>TextPicture</Representation>
		</Command>
	</Commands>
	<Parameters>
		<Parameter name="TempStorageAddress">
			<Type>
				<v8:Type>xs:string</v8:Type>
				<v8:StringQualifiers>
					<v8:Length>0</v8:Length>
					<v8:AllowedLength>Variable</v8:AllowedLength>
				</v8:StringQualifiers>
			</Type>
			<KeyParameter>true</KeyParameter>
		</Parameter>
	</Parameters>
</Form>