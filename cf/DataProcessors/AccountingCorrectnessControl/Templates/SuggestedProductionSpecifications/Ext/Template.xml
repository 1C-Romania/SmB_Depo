		<field xsi:type="DataSetFieldField">
			<dataPath>Characteristic</dataPath>
			<field>Characteristic</field>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	InventoryAssemblyProducts.Ref AS DocumentRef,
	InventoryAssemblyProducts.ProductsAndServices AS Products,
	InventoryAssemblyProducts.ProductsAndServices.Specification AS ProductionSpecification
INTO TU_Products
FROM
	Document.InventoryAssembly.Products AS InventoryAssemblyProducts
WHERE
	InventoryAssemblyProducts.Ref = &amp;DocumentRef
	AND InventoryAssemblyProducts.Specification = VALUE(Catalog.Specifications.EmptyRef)
{WHERE
	InventoryAssemblyProducts.Ref.*}
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	TU_Products.DocumentRef,
	TU_Products.Products,
	TU_Products.ProductionSpecification,
	SpecificationsContent.ProductsAndServices,
	SpecificationsContent.Characteristic,
	SpecificationsContent.Count
FROM
	TU_Products AS TU_Products
		LEFT JOIN Catalog.Specifications.Content AS SpecificationsContent
		ON TU_Products.ProductionSpecification = SpecificationsContent.Ref</query>
	</dataSet>
