	<dataSource>
		<name>DataSource1</name>
		<dataSourceType>Local</dataSourceType>
	</dataSource>
	<dataSet xsi:type="DataSetQuery">
		<name>DataSet</name>
		<field xsi:type="DataSetFieldField">
			<dataPath>EDVersionState</dataPath>
			<field>EDVersionState</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>CountED</dataPath>
			<field>CountED</field>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	EDStates.EDVersionState,
	COUNT(EDStates.ElectronicDocument) AS CountED
FROM
	InformationRegister.EDStates AS EDStates
WHERE
	Not EDStates.ElectronicDocument = VALUE(Catalog.EDAttachedFiles.EmptyRef)
	AND EDStates.ElectronicDocument.CreationDate &gt;= &amp;BeginOfPeriod
	AND EDStates.ElectronicDocument.CreationDate &lt;= &amp;EndOfPeriod

GROUP BY
	EDStates.EDVersionState</query>
	</dataSet>
	<totalField>
		<dataPath>CountED</dataPath>
		<expression>SUM(CountED)</expression>
		<group>EDVersionState</group>
		<group>Overall</group>
	</totalField>
